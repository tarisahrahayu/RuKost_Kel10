<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="25dp"
        android:text="Pilih Tanggal Mulai Kos"
        android:fontFamily="@font/Poppins_Medium"
        android:textSize="16dp"
        android:layout_marginRight="85dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/icon_info"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/nomor1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_bellow="@id/icon_info"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/Poppins_Regular"
        android:layout_marginTop="-40dp"
        android:text="1. Waktu mulai ngekos terdekat : "
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/info1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_bellow="@id/icon_info"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/Poppins_Regular"
        android:layout_marginTop="1dp"
        android:text="di hari H setelah pengajuan sewa "
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/icon_info2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/nomor2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_bellow="@id/icon_info"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/Poppins_Regular"
        android:layout_marginTop="-40dp"
        android:text="2. Waktu mulai ngekos terjauh : "
        android:textColor="@color/black"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/info2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_bellow="@id/icon_info"
        android:layout_marginStart="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/Poppins_Regular"
        android:text="1 bulan setelah pengajuan sewa"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etJam"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Date Picker"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTanggal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/btnTanggal"
        android:hint="Tanggal Sekarang Sekarang" />

    <ImageButton
        android:id="@+id/btnTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTanggal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_baseline_date_range_24" />

</RelativeLayout>